# Simpleton LLM Service Configuration

# API Keys (comma-separated list of valid API keys)
# Generate secure keys with: openssl rand -hex 32
API_KEYS=your-secret-api-key-here,another-key-if-needed

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434

# Default Models
DEFAULT_INFERENCE_MODEL=qwen2.5:7b
DEFAULT_EMBEDDING_MODEL=nomic-embed-text
DEFAULT_VISION_MODEL=llava

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=INFO

# RAG Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
DEFAULT_COLLECTION=documents
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_EMBEDDING_TTL=86400
CACHE_INFERENCE_TTL=3600

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_RETENTION_HOURS=168
ALERT_ERROR_RATE_THRESHOLD=0.1
ALERT_RESPONSE_TIME_THRESHOLD=5.0
